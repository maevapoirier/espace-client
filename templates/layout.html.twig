{% extends 'base.html.twig' %}

{% block body %}
	<div class="container-fluid">
		<div class="row">
			<div class="main-container d-flex">
				<div class="sidebar pt-5" id="navbar">
					<div class="header-box mb-5 text-center">
						<i class="fa-solid fa-circle-xmark d-block d-lg-none fa-2xl" id="close-btn"></i>
						<h2 class="text-center">Espace Client</h2>


					</div>
					<div class="user-box">
