						<div class="col text-center"><img class ="mini-avatar rounded-circle" src="{{azuracom_api_url ~ app.user.avatar}}" alt="photo de profil"></div>
						<div class="col">
							<h5 class="user mb-5 text-center">
								{{app.user.lastName}} {{app.user.firstName}}
								{# TODO : ajouter les notifications #}
								{{client_context.data.name}}
							</h5>
						</div>
						{% endif %}
					</div>
					<nav class="mt-5 flex-grow-1">
						<ul>
							<li>
								<a href="{{ path('app_home')}}" class="text-decoration-none">
									<i class="fa-solid fa-house-chimney"></i>
									<p>
										Tableau de bord</p>
								</a>
							</li>
							<li>
								<a href="{{ path('app_client') }}" class="text-decoration-none">
									<i class="fa-solid fa-user"></i>
									<p>
										Mon profil</p>
								</a>
							</li>
							<li>
								<a href="#" class="text-decoration-none">
									<i class="fa-solid fa-folder-open"></i>
									<p>
										Mes documents</p>
								</a>
							</li>
							<li>
								<a href="{{ path('app_project')}}" class="text-decoration-none">
									<i class="fa-solid fa-briefcase"></i>
									<p>
										Mes projets</p>
								</a>
							</li>
							<li>
								<a href="{{ path('app_support')}}" class="text-decoration-none">
									<i class="fa-solid fa-gear"></i>
								<p>Assistance</p>
								</a>
							</li>

						</ul>

					</nav>
					<a href="{{ path('app_logout') }}" class="text-decoration-none logout btn btn-primary" id="lougout">DÃ©connexion</a>
				</div>
				<div class="main">
					{% block header %}
						{% include "partials/_header.html.twig" %}
					{% endblock %}
					<main>
						{% block content %}{% endblock %}

					</main>
					{% block footer %}
						{% include "partials/_footer.html.twig" %}
					{% endblock %}
				</div>
			</div>	
		</div>	
	</div>
{% endblock %}
