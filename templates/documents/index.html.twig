{% extends 'layout.html.twig' %}

{% block title %}Espace Client Azuracom{% endblock %}
{% set title = "Mes documents" %}

{% block content %}



<div class="card mb-3">
  <div class="card-body">
    <h5 class="card-title">Mes documents</h5>
    <div class="table-responsive">
        <table class="table table-hover">
        {% for invoice in invoices %}
            <tr>
                <td>Facture num√©ro {{invoice.invoice_number}}</td>
                <td>Date : {{invoice.date | date("d/m/Y")}}</td>
                <td>{{invoice.status}}</td>
                <td>Montant TTC : {{invoice.total}}</td>
                <td><a href="{{ path('documents_pdf', {'id': invoice.invoice_id}) }}" class="btn btn-primary">Afficher</a></td>
            </tr>
        {% endfor %}
            
        </table>
    </div>
  </div>
</div>


{% endblock %}
