{% extends 'layout.html.twig' %}

{% block title %}Espace Client Azuracom{% endblock %}
{% set title = "Demander un support" %}

{% block content %}


<div class="card mb-3">
  <div class="card-body">
    <h5 class="card-title">Envoyer une nouvelle demande de support</h5>
    <div class="form-group ">
        {{ form_start(form) }}

        {{ form_label(form.subject, 'Objet') }}
        {{ form_widget(form.subject) }}

        {{ form_label(form.message, 'Message') }}
        {{ form_widget(form.message) }}

        {{ form_label(form.attached_file, 'Pi√®ce jointe') }}
        {{ form_widget(form.attached_file) }}

        <div class="d-grid gap-2 d-md-flex justify-content-md-end align-text-bottom">
            <button class="btn btn-primary">Envoyer un nouveau ticket</button>
        </div>
        {{ form_end(form) }}
    </div>
  </div>
</div>


{% endblock %}
